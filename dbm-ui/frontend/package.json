    "vite-plugin-imp": "2.4.0",
    "vite-plugin-style-import": "2.0.0",
    "vue-tsc": "^1.8.22"
  },
  "simple-git-hooks": {
    "pre-commit": "cd dbm-ui/frontend && npx lint-staged",
    "commit-msg": "cd dbm-ui/frontend && npx commitlint --edit $1"
  },
  "lint-staged": {
    "*.css": "stylelint --allow-empty-input",
    "*.less": "stylelint --allow-empty-input --fix --customSyntax=postcss-less",
    "*.{js,ts,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16.0.1"
  }
}
