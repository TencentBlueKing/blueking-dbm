    "vue-content-loader": "^2.0.1",
    "vue-i18n": "^9.6.5",
    "vue-request": "^2.0.4",
    "vue-router": "^4.2.5",
    "vuedraggable": "4.1.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.0.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.11.21",
    "@types/qs": "^6.9.12",
